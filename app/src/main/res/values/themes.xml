<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Puppy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/LightPrimaryColor</item>
        <item name="colorPrimaryDark">@color/LightPrimaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/LightPrimaryLightColor</item>
        <item name="colorOnPrimary">@color/LightPrimaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LightSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/LightSecondaryLightColor</item>
        <item name="colorOnSecondary">@color/LightSecondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/DarkWindowBG</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Puppy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Puppy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Puppy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>